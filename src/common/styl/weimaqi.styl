/**方格布局*/
.grid-Content{
//padding:13px 0;
  width 100%
  overflow auto
  padding:0 rem(10)
  &.layout2{
    flex:1;
  }
  .grid-ul{
    display flex
    flex-wrap wrap
  //margin-bottom:96px;
    &.show{
      margin 0;
    }
    &.grid-bg{
      >li.active .grid-div{
        background $color
        color:#fff;
        border:rem(2) solid $color
        box-shadow: 0px rem(5) rem(10) 0px rgba(0, 153, 255, 0.2);
        .grid-price{
          color:#fff;

        }
        .grid-warn{
          color:#fff;
        }
      }
    }
    li{
      flex:0 0 33.3%;
      padding:rem(10)
      height rem(226.5)
      overflow hidden
      position relative
      &.active{
        .grid-div{border:rem(4) solid #009eff;}
      }
      &.disable{
        .grid-text p,.grid-text span{
          color:#ccc;
        }
        .grid-empty{display:flex;}
      }
      .grid-div{
        padding:0 rem(10)
        height 100%
        border:rem(2) solid #e4e4e4;
        box-shadow: 0px rem(5) rem(10) 0px rgba(204, 204, 204, 0.2);
        border-radius rem(20)
        transition all 0.15s linear;
        display flex
        align-items center
        justify-content center
        position relative
        overflow hidden
      }
      .grid-text{
        text-align left
        display: flex;
        flex-direction: column;
        max-width 100%;
        p{
          line-height rem(30)
          font-size rem(26)
          height rem(30)
          margin:rem(10) 0
          display inline-block
          textover()
          transition none
        }
        p:nth-child(2){
          height rem(30)
          
          text-align center
        }
        p:nth-child(3){
          height rem(30)
          
          text-align center
        }
        span{
          line-height rem(26)
          font-size rem(26)
          display inline-block
        }
        .grid-warn{
          color: #cccccc
          font-size:rem(22)
          margin:rem(10) 0
          line-height rem(22)
        }
      }
      .grid-price{
        color: #009eff
        transition all 0.15s linear;
        font-family:number-webfont;
      }
      .grid-special{
        icon(78,78)
        position absolute
        z-index 15
        top: rem(10);
        right : rem(10)
        flex-aj();
        line-height rem(20)
        font-size rem(20)
        color:#fff;
        >span{
          transform rotateZ(45deg)
          margin-bottom: rem(16)
          margin-left: rem(20)
        }
        &.limit{
          bgUrl('layout/prefer_red.svg')
          color:#fff;
        }
        &.recommend{
          bgUrl('layout/prefer_yellow.svg')
          color:#97480f;
        }
      }
      .grid-empty{
        position absolute
        top:0;
        left 0;
        bottom:0;
        right:0;
        justify-content center
        align-items center
        display none
        >span{
          width rem(100)
          height rem(100)
          background rgba(51,51,51,0.6)
          justify-content center
          align-items center
          display flex
          color:#fff;
          font-size rem(24)
          border-radius 50%
        }
      }
      .grid-impor{
        position absolute
        z-index 3;
        bottom:0;
        left:0;
        right:0;
        height:rem(83)
        bgUrl('personal/wavesBg.png');
        background-position-y bottom;
        display flex;
        align-items flex-end
        padding-bottom:rem(13)
        justify-content center;
        color:#fff;
        font(24)
      }
    }
  }
}

