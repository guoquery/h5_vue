// 弹出框
.popup{
    position fixed 
    bottom:0;
    top:0;
    left:0;
    right:0;
    z-index 99
    transform scale(0)
    transition all 0s linear 0.15s;
    &.active{
        transition all 0s linear;
        transform scale(1)
        .popup-bg{
            opacity 1
        }
        .popup-div{
            transform scale(1)
            opacity 1;
        }
    }
    .popup-bg{
        position fixed
        top:0;
        left:0;
        right:0;
        bottom:0;
        z-index 1
        background rgba(0,0,0,0.5)
        transition all 0.15s linear
        opacity 0
    }
    .popup-div{
        position fixed
        top:0;
        left:0;
        right:0;
        bottom:0;
        z-index 2
        flex-aj()
        transform scale(0)
        transition all 0.15s linear
        opacity 0
    }
}
