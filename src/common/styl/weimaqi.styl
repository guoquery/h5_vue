rem($px){
  $px/37.5/2rem
}

font($fontSize){
  line-height:rem($fontSize + 2)
  font-size:rem($fontSize)
  vertical-align bottom
}
bg($path){
  background url($path) no-repeat center center;
  background-size contain
}
bgUrl($path){
  background url($url $path) no-repeat center center;
  background-size contain
}
flex-aj(){
  display flex
  align-items center
  justify-content center
}
flex-j(){
  display flex
  justify-content center
}

flex-a(){
  display flex
  align-items center
}

flex-lr(){
  display flex
