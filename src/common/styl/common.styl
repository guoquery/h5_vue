/*页面过度效果渐入渐出*/
.slide-fade{
  position: absolute;left:0;right: 0;
}
.slide-fade-enter-active {
  transition: all 0.5s ease;
}
.slide-fade-leave-active {
  transition: all 0.35s cubic-bezier(2.0, 0.5, 0.8, 1.0);
}
.slide-fade-enter, .slide-fade-leave-to
{
  left:0;right: 0;
  transform: translateX(50px);
  opacity: 0;
}
.waves-effect{
  display block
}
#container .amap-ui-misc-positionpicker{
  display none
}
rem($px){
  $px/37.5/2rem
}
 .fixed{
  position fixed
  top:0;
  left:0;
  right:0;
  z-index 222;
  width 0;
  bottom:0;
  padding:0 !important;
  margin: 0 !important;
  >div{
    width rem(750)
    height 100%
    background #f8f8f8;
    position relative
  }
}