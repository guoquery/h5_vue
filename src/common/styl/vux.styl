// 空状态
.emptyStatus{
    flex:1;
    height 100%
    display flex
    flex-direction column
    align-items center
    justify-content center
    position relative
    z-index 1
    .img{
        background-repeat no-repeat
        background-position rem(20) center
        background-size contain
        display inline-flex
        width rem(444)
        height rem(374)
        margin-left:rem(30)
    }
    .text{
        font-size:rem(28)
        color:#999
    }
}