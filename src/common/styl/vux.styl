}
// toast
.vux-toast{
  .weui-toast.weui-toast_text{
    max-width 35em!important
    width auto!important
  }
  .weui-toast_text .weui-toast__content{
        line-height rem(40)
        word-break break-all
        padding:rem(20)!important
  }
}

// 弹出加载框
.weui-loading_toast.vux-loading{
  .weui-mask_transparent
  .weui-toast{
    display flex
    align-items center
    flex-direction column
    justify-content center
    width rem(200)!important
    height rem(200)!important
    top:rem(320)!important
    min-height rem(200)!important
  }
  .weui-loading.weui-icon_toast{
    margin:0!important
    width rem(60)!important
    height rem(60)!important
  }
  .weui-toast__content{
    margin: rem(27) 0 0 0!important
    font-size:rem(28)!important
  }
}

// confirm确认框
.vux-confirm .vux-x-dialog .weui-dialog .weui-dialog__bd{
    display flex
    justify-content center
    align-items: flex-end
}

